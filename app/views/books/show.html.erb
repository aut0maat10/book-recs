<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
  </div>
  <div class="col-md-8">
    
    <h1><%= @book.title %></h1>
    <h2>by <%= @book.author %></h2><br>
    
    <h4>Average Rating</h4>
    <div class="average-review-rating" data-score=<%= @average %>></div>
    <h5><%= @book.genre_name %></h5>
    <h5>Year Published: <%= @book.year_published %></h5>
    <br>
    <h4>Description:</h4>
    <p><%= @book.description %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div>
      <p>
        <%= link_to 'Show Reviews', book_reviews_path(@book), class: "show_reviews" %>
      </p>
      
      <!-- <p><%= render @book.reviews %></p> -->
    </div>
    <div class="reviews"></div>
    <!-- <div>
      <p><%= link_to "Add Review", new_book_review_path(@book), class: "btn btn-primary" %></p>
    </div> -->
    <div>
      <%= form_for([@book, @book.reviews.build]) do |f| %>

        <div id="rating-form">
          <%= f.label 'Rating'%>
        </div>

        <%= f.label 'Comment'%><br>
        <%= f.text_area :comment %><br>

        <%= f.submit %>
      <% end %>        
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <p><%= link_to "Home", root_path %></p>
    <% if @book.user_id == current_user.id %>
      <p><%= link_to "Edit", edit_book_path(@book) %></p>
      <p><%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure?"} %></p>
    <% end %>
  </div> 
</div>

<!-- Handlebars -->

<script id="review-template" type="text/x-handlebars-template">
  <div class="review">
    <form class="new_review" id="new_review" action="/books/<%= @book.id %>/reviews" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="âœ“">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div id="rating-form">
        <label>{{rating}}</label>
        <input name="review[rating]" type="hidden">
      </div>
      <label>{{comment}}</label>
      <textarea name="review[comment]" id="review_comment"></textarea>
      <input type="submit" name="commit" value="Create Review" data-disable-with="Create Review"    
    </form>
  </div>
</script>

