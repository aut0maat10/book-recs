<h1>Edit Review</h1>

<%= form_for([@book, @review]) do |f| %>
  <div id="rating-form">
    <%= f.label 'Rating'%>
  </div>

  <%= f.label 'Comment' %><br>
  <%= f.text_area :comment %><br>

  <%= f.submit %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets',
    scoreName: 'review[rating]'
  });

</script>