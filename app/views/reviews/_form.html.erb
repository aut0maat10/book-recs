<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>

    <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
        <% end %>
    </ul>
  </div>
<% end %>

<%= form_for([@book, @book.reviews.build]) do |f| %>
  
  <div id="rating-form">
    <%= f.label 'Rating'%>
  </div>
  
  
  <%= f.label 'Comment'%><br>
  <%= f.text_area :comment %><br>

  <%= f.submit %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/images',
    scoreName: 'review[rating]'
  }); 
</script>