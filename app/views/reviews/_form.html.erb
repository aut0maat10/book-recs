<%= form_for([@book, @book.reviews.build]) do |f| %>
  
  
  <div id="rating-form">
    <%= f.label 'Rating'%>
  </div>
  
  
  <%= f.label 'Comment'%><br>
  <%= f.text_area :comment %><br>

  <%= f.submit %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets',
    scoreName: 'review[rating]'
  }); 
</script>